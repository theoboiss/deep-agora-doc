      \csappto{polytech@output@academicsupervisors@simple}{\csuse{polytech@and} }%
      \booltrue{polytech@academicsupervisors@plural}%
    }{}%
    \csappto{polytech@output@academicsupervisors@simple}{#2 #3}%
  }%
} 

